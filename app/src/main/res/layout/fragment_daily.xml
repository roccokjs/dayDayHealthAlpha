<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".ui.main.MainActivity"
	tools:layout_editor_absoluteY="25dp">

	<TextView
		android:id="@+id/textViewExercise"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="8dp"
		android:layout_marginStart="8dp"
		android:layout_marginTop="22dp"
		android:text="운동 \u0026 금연"
		android:textSize="10dp"
		app:layout_constraintStart_toStartOf="@+id/cardViewExercise"
		app:layout_constraintTop_toTopOf="parent"
		tools:ignore="HardcodedText" />

	<TextView
		android:id="@+id/textViewSmoking"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="8dp"
		android:layout_marginStart="8dp"
		android:layout_marginTop="22dp"
		android:text="금연"
		android:textSize="10dp"
		app:layout_constraintStart_toStartOf="@+id/cardViewSmoking"
		app:layout_constraintTop_toTopOf="parent" />

	<android.support.v7.widget.CardView
		android:id="@+id/cardViewExercise"
		android:layout_width="160dp"
		android:layout_height="60dp"
		android:layout_marginTop="8dp"
		app:cardCornerRadius="3dp"
		app:cardElevation="4dp"
		app:layout_constraintEnd_toStartOf="@+id/cardViewSmoking"
		app:layout_constraintHorizontal_bias="0.5"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/textViewExercise">

		<TextView
			android:id="@+id/textViewCardViewExercise"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center|top"
			android:layout_marginTop="6dp"
			android:text="운동"
			android:textSize="11dp"/>
	</android.support.v7.widget.CardView>

	<android.support.v7.widget.CardView
		android:id="@+id/cardViewSmoking"
		android:layout_width="160dp"
		android:layout_height="60dp"
		android:layout_marginTop="8dp"
		app:cardCornerRadius="3dp"
		app:cardElevation="4dp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.5"
		app:layout_constraintStart_toEndOf="@+id/cardViewExercise"
		app:layout_constraintTop_toBottomOf="@+id/textViewSmoking">

		<TextView
			android:id="@+id/textViewCardViewSmoking"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center|top"
			android:layout_marginTop="6dp"
			android:text="금연"
			android:textSize="11dp" />
	</android.support.v7.widget.CardView>

	<TextView
		android:id="@+id/textViewCal"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="8dp"
		android:layout_marginStart="8dp"
		android:layout_marginTop="36dp"
		android:text="칼로리"
		android:textSize="9dp"
		app:layout_constraintStart_toStartOf="@+id/cardViewBreakfast"
		app:layout_constraintTop_toBottomOf="@+id/cardViewExercise" />

	<TextView
		android:id="@+id/textViewCalEval"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="16dp"
		android:layout_marginLeft="16dp"
		android:text="적당함"
		android:textSize="16dp"
		app:layout_constraintBottom_toBottomOf="@+id/textViewCal"
		app:layout_constraintStart_toEndOf="@+id/textViewCal"/>

	<android.support.v7.widget.CardView
		android:id="@+id/cardViewBreakfast"
		android:layout_width="80dp"
		android:layout_height="68dp"
		android:layout_marginTop="8dp"
		app:cardCornerRadius="3dp"
		app:cardElevation="4dp"
		app:layout_constraintStart_toStartOf="@+id/cardViewExercise"
		app:layout_constraintTop_toBottomOf="@+id/textViewCal">

		<TextView
			android:id="@+id/textViewCardViewBreakfast"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="left|top"
			android:layout_marginLeft="6dp"
			android:layout_marginTop="6dp"
			android:text="아침"
			android:textSize="11dp" />

	</android.support.v7.widget.CardView>

	<android.support.v7.widget.CardView
		android:id="@+id/cardViewLunch"
		android:layout_width="80dp"
		android:layout_height="68dp"
		android:layout_marginStart="8dp"
		android:layout_marginLeft="8dp"
		app:cardCornerRadius="3dp"
		app:cardElevation="4dp"
		app:layout_constraintBottom_toBottomOf="@+id/cardViewBreakfast"
		app:layout_constraintStart_toEndOf="@+id/cardViewBreakfast"
		app:layout_constraintTop_toTopOf="@+id/cardViewBreakfast">

		<TextView
			android:id="@+id/textViewCardViewLunch"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="left|top"
			android:layout_marginLeft="6dp"
			android:layout_marginTop="6dp"
			android:text="점심"
			android:textSize="11dp"/>

	</android.support.v7.widget.CardView>

	<android.support.v7.widget.CardView
		android:id="@+id/cardViewDinner"
		android:layout_width="80dp"
		android:layout_height="68dp"
		android:layout_marginStart="8dp"
		android:layout_marginLeft="8dp"
		app:cardCornerRadius="3dp"
		app:cardElevation="4dp"
		app:layout_constraintBottom_toBottomOf="@+id/cardViewLunch"
		app:layout_constraintStart_toEndOf="@+id/cardViewLunch"
		app:layout_constraintTop_toTopOf="@+id/cardViewLunch">

		<TextView
			android:id="@+id/textViewCardViewDinner"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="left|top"
			android:layout_marginLeft="6dp"
			android:layout_marginTop="6dp"
			android:text="저녁"
			android:textSize="11dp"/>
	</android.support.v7.widget.CardView>

	<android.support.v7.widget.CardView
		android:id="@+id/cardViewMidnight"
		android:layout_width="80dp"
		android:layout_height="68dp"
		android:layout_marginStart="8dp"
		android:layout_marginLeft="8dp"
		app:cardCornerRadius="3dp"
		app:cardElevation="4dp"
		app:layout_constraintBottom_toBottomOf="@+id/cardViewDinner"
		app:layout_constraintStart_toEndOf="@+id/cardViewDinner"
		app:layout_constraintTop_toTopOf="@+id/cardViewDinner">

		<TextView
			android:id="@+id/textViewCardViewMidnight"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="left|top"
			android:layout_marginLeft="6dp"
			android:layout_marginTop="6dp"
			android:text="야식"
			android:textSize="11dp"/>

	</android.support.v7.widget.CardView>

	<TextView
		android:id="@+id/textViewWeight"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="8dp"
		android:layout_marginStart="8dp"
		android:layout_marginTop="36dp"
		android:text="체중"
		android:textSize="9dp"
		app:layout_constraintStart_toStartOf="@+id/cardViewWeight"
		app:layout_constraintTop_toBottomOf="@+id/cardViewBreakfast"
		tools:ignore="HardcodedText" />

	<android.support.v7.widget.CardView
		android:id="@+id/cardViewWeight"
		android:layout_width="100dp"
		android:layout_height="46dp"
		android:layout_marginTop="6dp"
		app:cardCornerRadius="3dp"
		app:cardElevation="4dp"
		app:layout_constraintStart_toStartOf="@+id/cardViewExercise"
		app:layout_constraintTop_toBottomOf="@+id/textViewWeight">

		<TextView
			android:id="@+id/textViewCardViewWeight"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="right|bottom"
			android:layout_marginBottom="8dp"
			android:layout_marginRight="8dp"
			android:text="Kg"
			android:textSize="15dp" />
	</android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>